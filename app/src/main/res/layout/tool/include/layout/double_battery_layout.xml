<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_370"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/double_battery_bat1_layout"
            android:layout_marginTop="@dimen/qb_px_100"
            android:layout_width="@dimen/qb_px_520"
            android:layout_height="@dimen/qb_px_420"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/double_battery__bat1_charge_img"
                    android:src="@drawable/ic_battery_charging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"/>

                <ImageView
                    android:src="@drawable/ic_battery_first_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo" />

                <RelativeLayout
                    android:layout_width="@dimen/qb_px_330"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/ic_battery_no_ele"
                        android:layout_width="@dimen/qb_px_330"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/todo"/>
                    <ImageView
                        android:id="@+id/battery_double_ba1_capacity_img"
                        android:src="@drawable/ic_battery_no_ele"
                        android:layout_width="@dimen/qb_px_330"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/todo"/>
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/qb_px_10"
                android:layout_gravity="right"
                android:layout_width="@dimen/qb_px_400"
                android:layout_height="@dimen/qb_px_170"
                android:layout_marginEnd="@dimen/qb_px_20"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_marginEnd="@dimen/qb_px_10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">



                        <androidx.appcompat.widget.AppCompatTextView
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="@dimen/qb_px_10"
                            app:autoSizeMaxTextSize="@dimen/qb_px_80"
                            app:autoSizeStepGranularity="2sp"
                            android:id="@+id/battery_double_ba1_capacity_txt"
                            android:text="100 %"
                            android:textSize="@dimen/qb_px_80"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/qb_px_100" />



                    <TextView
                        android:textSize="@dimen/qb_px_35"
                        android:text="电池电量"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginRight="@dimen/qb_px_40"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="@dimen/qb_px_10"
                            app:autoSizeMaxTextSize="@dimen/qb_px_80"
                            app:autoSizeStepGranularity="2sp"
                            android:id="@+id/battery_double_ba1_temp_txt"
                            android:text="0 ℃"
                            android:textSize="@dimen/qb_px_80"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/qb_px_100" />


                    </LinearLayout>

                    <TextView
                        android:textSize="@dimen/qb_px_35"
                        android:text="电池温度"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/double_battery_center_layout"
            android:layout_width="@dimen/qb_px_200"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:visibility="invisible"
                android:id="@+id/battery_double_turbo_img"
                android:layout_marginTop="@dimen/qb_px_42"
                android:layout_width="@dimen/qb_px_144"
                android:layout_height="@dimen/qb_px_42"
                android:contentDescription="@string/todo"/>

            <LinearLayout
                android:layout_marginTop="@dimen/qb_px_24"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/double_battery__bat1_in_use_img"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/qb_px_20"
                    android:src="@drawable/ic_battery_status_no_ele"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"/>

                <ImageView
                    android:src="@drawable/ic_battery_connection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"/>

                <ImageView
                    android:id="@+id/double_battery__bat2_in_use_img"
                    android:contentDescription="@string/todo"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/qb_px_20"
                    android:src="@drawable/ic_battery_status_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>





        </LinearLayout>



        <LinearLayout
            android:id="@+id/double_battery_bat2_layout"
            android:layout_marginTop="@dimen/qb_px_100"
            android:layout_width="@dimen/qb_px_520"
            android:layout_height="@dimen/qb_px_420"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_marginLeft="@dimen/qb_px_50"
                    android:layout_width="@dimen/qb_px_330"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ic_battery_no_ele"
                        android:layout_width="@dimen/qb_px_330"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/todo"/>

                    <ImageView
                        android:id="@+id/battery_double_ba2_capacity_img"
                        android:src="@drawable/ic_battery_no_ele"
                        android:layout_width="@dimen/qb_px_330"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/todo"/>
                </RelativeLayout>
                <ImageView
                    android:src="@drawable/ic_battery_second_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"/>

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/double_battery__bat2_charge_img"
                    android:rotation="180"
                    android:src="@drawable/ic_battery_charging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/qb_px_10"
                android:layout_gravity="left"
                android:layout_width="@dimen/qb_px_400"
                android:layout_height="@dimen/qb_px_170"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginLeft="@dimen/qb_px_20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="@dimen/qb_px_10"
                            app:autoSizeMaxTextSize="@dimen/qb_px_80"
                            app:autoSizeStepGranularity="2sp"
                            android:id="@+id/battery_double_ba2_capacity_txt"
                            android:text="0 ℃"
                            android:textSize="@dimen/qb_px_80"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/qb_px_100" />
                    </LinearLayout>

                    <TextView
                        android:textSize="@dimen/qb_px_35"
                        android:text="电池电量"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:gravity="center"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMinTextSize="@dimen/qb_px_10"
                            app:autoSizeMaxTextSize="@dimen/qb_px_80"
                            app:autoSizeStepGranularity="2sp"
                            android:id="@+id/battery_double_ba2_temp_txt"
                            android:text="0 ℃"
                            android:textSize="@dimen/qb_px_80"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/qb_px_100" />

                    </LinearLayout>

                    <TextView
                        android:textSize="@dimen/qb_px_35"
                        android:text="电池温度"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>




    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/double_battery_charge_es_tx"
        android:textSize="@dimen/qb_px_35"
        android:layout_marginTop="@dimen/qb_px_15"
        android:layout_gravity="center_horizontal"
        android:text="约需要0小时0分钟充满"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <View
        android:layout_marginTop="@dimen/qb_px_20"
        android:layout_marginRight="@dimen/qb_px_20"
        android:layout_marginLeft="@dimen/qb_px_20"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c4c4c4"/>


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_560"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_78"
            android:layout_marginTop="@dimen/qb_px_60"
            android:gravity="center_vertical"
            >


            <ImageView
                android:src="@drawable/ic_battery_turbo"
                android:layout_marginLeft="@dimen/qb_px_64"
                android:layout_width="@dimen/qb_px_214"
                android:layout_height="@dimen/qb_px_64"
                android:contentDescription="@string/todo"/>


            <Button
                android:background="@null"
                android:text="功能说明"
                android:layout_marginRight="@dimen/qb_px_64"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/qb_px_240"
                android:layout_height="@dimen/qb_px_88" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/qb_px_78"
            android:layout_marginRight="@dimen/qb_px_78"
            android:layout_marginTop="@dimen/qb_px_78"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_282"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/qb_px_326"
                    android:layout_height="@dimen/qb_px_198"
                    android:background="@drawable/ic_battery_step1_down"
                    android:gravity="center">


                    <TextView
                        android:gravity="center"
                        android:textColor="#0099ff"
                        android:text="插入2块电池"
                        android:textSize="@dimen/qb_px_42"
                        android:layout_width="@dimen/qb_px_290"
                        android:layout_height="wrap_content" />



                </RelativeLayout>


                <ImageView
                    android:src="@drawable/ic_battery_turbo_success"
                    android:layout_marginTop="@dimen/qb_px_24"
                    android:layout_width="@dimen/qb_px_60"
                    android:layout_height="@dimen/qb_px_60"
                    android:contentDescription="@string/todo"/>


            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/qb_px_326"
                    android:layout_height="@dimen/qb_px_198"
                    android:background="@drawable/ic_battery_step2"
                    android:gravity="center">


                    <TextView
                        android:gravity="center"
                        android:text="每块电池电量均大于30%"
                        android:textSize="@dimen/qb_px_42"
                        android:layout_width="@dimen/qb_px_290"
                        android:layout_height="wrap_content" />



                </RelativeLayout>


                <ImageView
                    android:src="@drawable/ic_battery_turbo_error"
                    android:layout_marginTop="@dimen/qb_px_24"
                    android:layout_width="@dimen/qb_px_60"
                    android:layout_height="@dimen/qb_px_60"
                    android:contentDescription="@string/todo"/>


            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/qb_px_326"
                    android:layout_height="@dimen/qb_px_198"
                    android:background="@drawable/ic_battery_step3"
                    android:gravity="center">


                    <TextView
                        android:gravity="center"
                        android:text="插入2块电池"
                        android:textSize="@dimen/qb_px_42"
                        android:layout_width="@dimen/qb_px_290"
                        android:layout_height="wrap_content" />



                </RelativeLayout>


                <TextView
                    android:text="Not Ready"
                    android:textSize="@dimen/qb_px_42"
                    android:layout_marginTop="@dimen/qb_px_24"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/qb_px_60" />


            </LinearLayout>




        </LinearLayout>



    </LinearLayout>
    <View
        android:layout_marginRight="@dimen/qb_px_20"
        android:layout_marginLeft="@dimen/qb_px_20"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c4c4c4"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/battery_tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_150"
        app:tabIndicatorColor="#0099ff"
        app:tabSelectedTextColor="#0099ff"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/battery_viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_800"/>



</LinearLayout>