<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    android:background="@color/blue2fc"
        android:id="@+id/title_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_160">

        <ImageView
            android:id="@+id/title_back_btn"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_black_withe"
            android:layout_width="@dimen/qb_px_120"
            android:layout_height="@dimen/qb_px_120" />

        <TextView
            android:layout_marginLeft="@dimen/qb_px_50"
            android:textColor="@color/colorWhiteGay"
            android:layout_toRightOf="@+id/title_back_btn"
            android:layout_centerVertical="true"
            android:id="@+id/title_back_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            />

       <LinearLayout
           android:layout_centerInParent="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:gravity="center">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center_vertical">

               <TextView
                   android:textColor="@color/colorWhiteGay"
                   android:transitionName="titleShare"
                   android:id="@+id/title_tx"
                   android:textStyle="bold"
                   android:textSize="@dimen/qb_px_70"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <ImageView
                   android:visibility="gone"
                   android:src="@drawable/ic_icon_select"
                   android:dropDownWidth="70dp"
                   android:spinnerMode="dropdown"
                   android:id="@+id/title_spinner"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toRightOf="@+id/main_car_info"
                   android:layout_marginLeft="@dimen/qb_m_px_10"
                   />
           </LinearLayout>

           <TextView
               android:visibility="gone"
               android:textSize="@dimen/qb_px_40"
               android:id="@+id/title_time_tx"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </LinearLayout>

        <TextView
            android:textColor="@color/colorWhiteGay"
            android:visibility="gone"
            android:id="@+id/title_submint_btn"
            android:layout_marginRight="@dimen/qb_px_50"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="完成"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:visibility="gone"
            android:layout_marginRight="@dimen/qb_px_20"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c4c4c4"/>


        <ImageView
            android:visibility="gone"
            android:id="@+id/car_history_choose_btn"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

