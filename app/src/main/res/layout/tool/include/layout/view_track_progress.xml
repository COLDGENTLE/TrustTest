<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_yaxis_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="km/h"
        android:textColor="#BEBEBE"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_xaxis_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="#BEBEBE"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>

    <com.sharkgulf.soloera.tool.view.trackprogressview.TrackLineChart
        android:id="@+id/trackLineChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_yaxis_lable"
        android:layout_above="@+id/tv_xaxis_lable"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

    <TextView
        android:id="@+id/tv_progress_ydesc"
        android:layout_width="@dimen/qb_px_200"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:gravity="center"
        android:background="@drawable/bg_green_radius"
        android:layout_above="@+id/trackLineChart"/>

    <TextView
        android:id="@+id/tv_progress_xdesc"
        android:layout_width="@dimen/qb_px_200"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:gravity="center"
        android:background="@drawable/bg_green_radius"
        android:layout_below="@+id/trackLineChart"
        android:layout_marginTop="3dp"/>

</RelativeLayout>