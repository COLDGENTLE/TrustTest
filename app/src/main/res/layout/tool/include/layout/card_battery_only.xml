<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_300">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <ImageView
                android:visibility="invisible"
                android:id="@+id/ic_battery_first_img"
                android:src="@drawable/ic_battery_first_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <RelativeLayout
                android:layout_width="@dimen/qb_px_330"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:src="@drawable/ic_battery_no_ele"
                    android:layout_width="@dimen/qb_px_330"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/card_only_ba_capacity_img"
                    android:src="@drawable/ic_battery_no_ele"
                    android:layout_width="@dimen/qb_px_330"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <ImageView
                android:visibility="invisible"
                android:id="@+id/card_only_ba_in_use_img"
                android:rotation="180"
                android:src="@drawable/ic_battery_charging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/qb_px_10"
            android:layout_gravity="center"
            android:layout_width="@dimen/qb_px_360"
            android:layout_height="@dimen/qb_px_170"
            android:orientation="horizontal"
            >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:gravity="center"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="@dimen/qb_px_10"
                        app:autoSizeMaxTextSize="@dimen/qb_px_80"
                        app:autoSizeStepGranularity="2sp"
                        android:id="@+id/card_only_ba_capacity_txt"
                        android:text="0 %"
                        android:textSize="@dimen/qb_px_100"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/qb_px_100" />




                    <androidx.appcompat.widget.AppCompatTextView
                        android:gravity="center"
                        android:id="@+id/card_only_ba_tem_txt"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="@dimen/qb_px_10"
                        app:autoSizeMaxTextSize="@dimen/qb_px_80"
                        app:autoSizeStepGranularity="2sp"
                        android:text="0 â„ƒ"
                        android:textSize="@dimen/qb_px_100"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/qb_px_100" />
        </LinearLayout>



    </LinearLayout>
</LinearLayout>