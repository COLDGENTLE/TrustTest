<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <LinearLayout
        android:background="@drawable/white_bg_white_line_bg"
        android:gravity="center"
        android:layout_marginLeft="@dimen/qb_px_150"
        android:layout_marginRight="@dimen/qb_px_150"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/qb_px_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/trust_double_title_tv"
                android:layout_marginBottom="@dimen/qb_px_50"
                android:text="添加失败"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="车辆错误原因ccccccc"
                android:gravity="center"
                android:id="@+id/trust_double_msg_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <View
            android:layout_marginTop="@dimen/qb_px_50"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrayC4"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_150"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trust_double_left_btn"
                android:text="@string/cancel"
                android:textColor="@color/textGraybe"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray6d"/>


            <TextView
                android:id="@+id/trust_double_right_btn"
                android:text="@string/confirm"
                android:textColor="@color/blue"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>