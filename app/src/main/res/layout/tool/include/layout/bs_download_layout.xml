<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<!--    show-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="visible"
        android:background="@drawable/white_bg"
        android:layout_marginLeft="@dimen/qb_px_100"
        android:layout_marginRight="@dimen/qb_px_100"
        android:id="@+id/download_show_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/show_title_tx"
            android:layout_marginTop="@dimen/qb_px_50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="版本更新"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/show_dec_tx"
            android:layout_marginLeft="@dimen/qb_px_60"
            android:layout_marginTop="@dimen/qb_px_50"
            app:layout_constraintTop_toBottomOf="@+id/show_title_tx"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="版本描述:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/show_msg_tx"
            android:text="1:测试测试测试测测试测试测试测试测试测试测试测试\n"
            android:layout_marginTop="@dimen/qb_px_10"
            app:layout_constraintTop_toBottomOf="@+id/show_dec_tx"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/qb_px_60"
            android:layout_marginRight="@dimen/qb_px_60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/show_line"
            app:layout_constraintTop_toBottomOf="@+id/show_msg_tx"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/qb_px_80"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrayC4"/>


        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/show_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_130"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/show_one_btn"
                android:gravity="center"
                android:text="下次再说"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <View
                android:background="@color/colorGrayC4"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/show_two_btn"
                android:textColor="@color/blue"
                android:gravity="center"
                android:text="立即升级"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


<!--showMust-->

    <!--    show-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:background="@drawable/white_bg"
        android:layout_marginLeft="@dimen/qb_px_100"
        android:layout_marginRight="@dimen/qb_px_100"
        android:id="@+id/download_show_must_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/show_must_title_tx"
            android:layout_marginTop="@dimen/qb_px_50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="版本更新"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/show_must_dec_tx"
            android:layout_marginLeft="@dimen/qb_px_60"
            android:layout_marginTop="@dimen/qb_px_50"
            app:layout_constraintTop_toBottomOf="@+id/show_must_title_tx"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="版本描述:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/show_must_msg_tx"
            android:text="1:测试测试测试测测试测试测试测试测试测试测试测试\n"
            android:layout_marginTop="@dimen/qb_px_10"
            app:layout_constraintTop_toBottomOf="@+id/show_must_dec_tx"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/qb_px_60"
            android:layout_marginRight="@dimen/qb_px_60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/show_must_line"
            app:layout_constraintTop_toBottomOf="@+id/show_must_msg_tx"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/qb_px_80"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrayC4"/>


        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/show_must_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_130"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/show_must_down_btn"
                android:textColor="@color/blue"
                android:gravity="center"
                android:text="立即升级"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

<!--    loading-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:background="@drawable/white_bg"
        android:layout_marginLeft="@dimen/qb_px_100"
        android:layout_marginRight="@dimen/qb_px_100"
        android:id="@+id/download_loading_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/loading_title_tx"
            android:layout_marginTop="@dimen/qb_px_50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="版本更新中"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/loading_dec_tx"
            android:layout_marginLeft="@dimen/qb_px_60"
            android:layout_marginTop="@dimen/qb_px_50"
            app:layout_constraintTop_toBottomOf="@+id/loading_title_tx"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="正在下载:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ProgressBar
            android:id="@+id/loading_progressbar"
            android:layout_marginLeft="@dimen/qb_px_60"
            android:layout_marginRight="@dimen/qb_px_60"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loading_dec_tx"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/loading_progress_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/qb_px_50"
            android:layout_marginTop="@dimen/qb_px_50"
            android:text="100/10000"
            android:layout_marginRight="@dimen/qb_px_60"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loading_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>







<!--    error-->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:background="@drawable/white_bg"
        android:layout_marginLeft="@dimen/qb_px_100"
        android:layout_marginRight="@dimen/qb_px_100"
        android:id="@+id/download_error_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/error_title_tx"
            android:layout_marginTop="@dimen/qb_px_50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="版本更新失败"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/error_dec_tx"
            android:layout_marginLeft="@dimen/qb_px_60"
            android:layout_marginTop="@dimen/qb_px_50"
            app:layout_constraintTop_toBottomOf="@+id/error_title_tx"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="失败原因:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/error_msg_tx"
            android:text="1:测试测试测试测测试测试测试测试测试测试测试测试\n"
            android:layout_marginTop="@dimen/qb_px_50"
            app:layout_constraintTop_toBottomOf="@+id/error_dec_tx"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/qb_px_60"
            android:layout_marginRight="@dimen/qb_px_60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/error_line"
            app:layout_constraintTop_toBottomOf="@+id/error_msg_tx"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/qb_px_50"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrayC4"/>


        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/error_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_130"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/error_one_btn"
                android:gravity="center"
                android:text="下次再说"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <View
                android:background="@color/colorGrayC4"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/error_two_btn"
                android:textColor="@color/blue"
                android:gravity="center"
                android:text="重试"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>