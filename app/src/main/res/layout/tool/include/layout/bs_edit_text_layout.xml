<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/bs_edit_text_ic_and_tv_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:visibility="visible"
            android:id="@+id/bs_edit_text_type_ic"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/del_ic" />

        <TextView
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/hwht_subset"
            android:textColorHint="@color/colorWhiteGay"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:id="@+id/bs_edit_text_type_tv"
            android:text=""
            android:layout_width="@dimen/qb_px_250"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
    </LinearLayout>



    <EditText
        android:textColor="@color/colorWhiteGay"
        android:textColorHint="@color/colorWhiteGay"
        android:inputType="textPassword"
        android:maxLength="16"
        android:maxLines="1"
        android:hint="@string/login_fragment_layout_pwd_hint_ed"
        android:layout_marginLeft="@dimen/qb_px_50"
        android:id="@+id/bs_edit_text_ed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:layout_toLeftOf="@+id/bs_edit_text_ic"
        android:layout_toRightOf="@+id/bs_edit_text_ic_and_tv_layout"
        tools:ignore="MissingConstraints" />


    <ImageView

        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/bs_edit_text_ic"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/del_ic"
         />

    <ImageView
        android:visibility="gone"
        android:layout_marginRight="@dimen/qb_px_50"
        android:layout_toLeftOf="@+id/bs_edit_text_ic"
        android:layout_centerVertical="true"
        android:id="@+id/bs_edit_text2_ic"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/del_ic"
        />

    <TextView
        android:id="@+id/bs_edit_right_tv"
        android:visibility="gone"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:text="@string/send_smms"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
</RelativeLayout>