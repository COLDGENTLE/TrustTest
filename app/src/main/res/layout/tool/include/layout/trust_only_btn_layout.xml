                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center"
                android:text="dadawdwad12a3d123w1d23aw"
                android:id="@+id/trust_only_msg_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>



    <View
        android:layout_marginTop="@dimen/qb_px_50"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrayC4"/>

    <TextView
        android:textColor="@color/blue"
        android:gravity="center"
        android:id="@+id/trust_only_submint_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/qb_px_150" />

    </LinearLayout>

