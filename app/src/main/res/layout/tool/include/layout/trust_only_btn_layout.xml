<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >


    <LinearLayout
        android:background="@drawable/white_bg_white_line_bg"
        android:gravity="center"
        android:layout_marginLeft="@dimen/qb_px_150"
        android:layout_marginRight="@dimen/qb_px_150"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/qb_px_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/trust_only_title_tv"
                android:layout_marginBottom="@dimen/qb_px_50"
