<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">


    <LinearLayout
        android:id="@+id/lock_car_unlock_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_100">

        <TextView
            android:id="@+id/lock_car_lock_title_tx"
            android:layout_centerInParent="true"
            android:text="车辆已锁定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>


    <TextView
        android:id="@+id/lock_car_lock_msg_tx"
        android:gravity="center"
        android:layout_marginLeft="@dimen/qb_px_108"
        android:layout_marginRight="@dimen/qb_px_108"
        android:text="车辆锁定后，此车的遥控钥匙和APP将无法进行撤防和打开电门操作"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/lock_car_lock_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/qb_px_50"
        android:layout_marginLeft="@dimen/qb_px_50">



        <Button
            android:id="@+id/lock_car_unlock_btn"
            android:text="解除锁定"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />


        <Button
            android:id="@+id/lock_car_lose_btn"
            android:text="启动丢车模式"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/lock_car_open_voice_btn"
            android:text="播放追车音"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/lock_car_unlock_cancel_btn"
        android:text="取消"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>