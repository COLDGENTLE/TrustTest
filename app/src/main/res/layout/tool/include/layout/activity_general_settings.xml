<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f2f5"
    tools:context=".home.user.GeneralSettingsActivity">

    <include
        layout="@layout/tite_layout"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/activity_general_settings_offlinemap_btn"
        android:layout_marginTop="@dimen/qb_px_50"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_160">

        <LinearLayout
            android:layout_marginLeft="@dimen/qb_px_50"
            android:gravity="center_vertical"
            android:layout_width="@dimen/qb_px_1000"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="离线地图"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="下载后，没网也能查看地图，设置地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginRight="@dimen/qb_px_50"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:background="@color/colorWhiteGay"
        android:id="@+id/activity_general_settings_about_bs_btn"
        android:layout_marginTop="@dimen/qb_px_50"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_160">

        <LinearLayout
            android:layout_marginLeft="@dimen/qb_px_50"
            android:gravity="center_vertical"
            android:layout_width="@dimen/qb_px_1000"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="@string/about_bs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <RelativeLayout
            android:layout_marginRight="@dimen/qb_px_50"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>