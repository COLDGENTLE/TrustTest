<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#00000000"
    >



    <RelativeLayout
        android:adjustViewBounds="true"
        android:background="@drawable/white_bg"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/qb_px_60"
        android:layout_marginRight="@dimen/qb_px_60"
        android:minHeight="@dimen/qb_px_400"
        android:maxHeight="@dimen/qb_px_800"
        android:layout_height="@dimen/qb_px_500"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_marginTop="@dimen/qb_px_40"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/qb_px_100"
            android:layout_marginRight="@dimen/qb_px_100"
            android:layout_height="match_parent"
            android:layout_above="@+id/double_btn_layout"
            android:orientation="vertical">

            <TextView
                android:visibility="visible"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:lineSpacingExtra="@dimen/qb_px_10"
                android:id="@+id/double_title_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/qb_px_50"
                android:visibility="visible"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:lineSpacingExtra="@dimen/qb_px_10"
                android:id="@+id/double_msg_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    <LinearLayout
        android:id="@+id/double_btn_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrayC4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/double_btn1_btn"
            android:gravity="center"
            android:text="@string/popupwindow_privacy_policy_disagree_tx"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_150"
            android:layout_weight="1" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGrayC4"/>

        <TextView
            android:id="@+id/double_btn2_btn"
            android:gravity="center"
            android:text="@string/popupwindow_privacy_policy_agree_tx"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_150"
            android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>