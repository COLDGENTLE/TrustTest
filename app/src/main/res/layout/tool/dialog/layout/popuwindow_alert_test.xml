<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteGay"
    android:gravity="center_horizontal"
    android:orientation="vertical">



    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/alert_test_big_ic"
        android:id="@+id/popu_alert_test_ic"
        android:layout_marginTop="@dimen/qb_px_480"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/qb_px_300"
        android:layout_height="@dimen/qb_px_300" />


    <TextView
        android:id="@+id/popu_alert__test_title_tx"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/popu_alert_test_ic"
        android:layout_marginTop="@dimen/qb_px_140"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/popu_alert__test_content_tx"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/popu_alert__test_title_tx"
        android:layout_marginTop="@dimen/qb_px_128"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginBottom="@dimen/qb_px_80"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/qb_px_100"
        android:layout_marginRight="@dimen/qb_px_100"
        android:layout_height="@dimen/qb_px_140">

        <Button
            android:textColor="@drawable/alert_popu_button_text_color_bg"
            android:background="@drawable/alert_popu_buttons_bg"
            android:id="@+id/popu_alert_test_submint_btn"
            android:text="按下终止报警"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/qb_px_50"/>


    </LinearLayout>

</RelativeLayout>