<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e8e8e8">


    <TextView
        android:background="@color/colorWhiteGay"
        android:textColor="@color/gray"
        android:gravity="center"
        android:text="@string/update_user_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_138" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c4c4c4"
        android:layout_marginLeft="@dimen/qb_px_50"
        android:layout_marginRight="@dimen/qb_px_50"/>

    <TextView
        android:id="@+id/popu_camera_btn"
        android:background="@color/colorWhiteGay"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:text="@string/camera"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_138" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c4c4c4"
        android:layout_marginLeft="@dimen/qb_px_50"
        android:layout_marginRight="@dimen/qb_px_50"/>

    <TextView
        android:id="@+id/popu_album_btn"
        android:background="@color/colorWhiteGay"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:text="@string/album"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_138" />


    <TextView
        android:id="@+id/popu_cancel_btn"
        android:layout_marginTop="@dimen/qb_px_50"
        android:background="@color/colorWhiteGay"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:text="@string/cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_138" />


</LinearLayout>