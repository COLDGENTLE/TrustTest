<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_400"
    android:orientation="horizontal">

    
    <LinearLayout
        android:layout_marginLeft="@dimen/qb_px_60"
        android:layout_width="@dimen/qb_px_62"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        
        <ImageView
            android:id="@+id/item_ble_or_service_status_ic"
            android:background="@drawable/del_bike_step_success_ic"
            android:layout_width="@dimen/qb_px_62"
            android:layout_height="@dimen/qb_px_62" />

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/item_ble_or_service_status_progressbar"
            android:layout_width="@dimen/qb_px_62"
            android:layout_height="@dimen/qb_px_62" />


        <View
            android:layerType="software"
            android:id="@+id/ble_or_service_bg_view"
            android:layout_centerInParent="true"
            android:background="#0099FF"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/qb_px_60">



            <TextView
                android:id="@+id/ble_or_service_step_tx"
                android:textSize="@dimen/qb_px_51"
                android:layout_marginLeft="@dimen/qb_px_50"
                android:text="STEP  1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />





            <TextView
                android:id="@+id/ble_or_service_step_msg_tx"
                android:textSize="@dimen/qb_px_51"
                android:layout_marginTop="@dimen/qb_px_42"
                android:layout_marginLeft="@dimen/qb_px_50"
                android:text="请先连接车辆"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/ble_or_service_status_msg_tx"
                android:layout_marginTop="@dimen/qb_px_30"
                android:layout_marginLeft="@dimen/qb_px_50"
                android:text="说明说明说明说明说明说明说明说明说明说明说明说明说明说明说明说明说明说明说明说明说明说明说明说明说明说明说明说明说明说明"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>



        <Button
            android:visibility="gone"
            android:layout_marginRight="@dimen/qb_px_60"
            android:textColor="@color/colorWhiteGay"
            android:id="@+id/ble_or_service_retry_btn"
            android:layout_alignParentRight="true"
            android:background="@drawable/login_register_btn_bg"
            android:text="重试"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qb_px_100" />

    </RelativeLayout>





    
</LinearLayout>