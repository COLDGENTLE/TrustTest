<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">


       <LinearLayout
           android:visibility="visible"
           android:id="@+id/show_ping_layout"
           android:gravity="center_horizontal"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <ImageView
               android:id="@+id/bind_car_connection_version_img"
               android:scaleType="fitXY"
               android:src="@drawable/bind_car_connection_low_version_ic"
               android:layout_width="match_parent"
               android:layout_height="@dimen/qb_px_1000" />

           <TextView
               android:layout_marginTop="@dimen/qb_px_100"
               android:textSize="@dimen/qb_px_60"
               android:textColor="@color/gray555"
               android:lineSpacingExtra="@dimen/qb_px_10"
               android:gravity="center"
               android:text="@string/bind_car_connection_tx"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />


           <com.tuo.customview.VerificationCodeView
               app:icv_et_text_color="@color/gray555"
               android:id="@+id/bind_car_connection_pin_code_ed"
               app:icv_et_number="4"
               app:icv_et_bg_focus="@drawable/shape_add_bikes_et_bg_focus"
               app:icv_et_bg_normal="@drawable/shape_add_bikes_et_bg_nomal"
               app:icv_et_divider_drawable="@drawable/shape_divider_identifying"
               android:layout_marginTop="@dimen/qb_px_78"
               android:layout_width="@dimen/qb_px_700"
               android:layout_height="@dimen/qb_px_160"
               app:icv_et_width="@dimen/qb_px_160"/>


           <View
               android:layout_width="1dp"
               android:layout_height="@dimen/qb_px_400"/>


           <LinearLayout
               android:layout_marginLeft="@dimen/qb_px_90"
               android:layout_marginRight="@dimen/qb_px_90"
               android:layout_marginBottom="@dimen/qb_px_70"
               android:layout_alignParentBottom="true"
               android:layout_width="match_parent"
               android:layout_height="@dimen/qb_px_130">


               <Button
                   android:visibility="gone"
                   android:id="@+id/bind_car_connection_next_btn"
                   android:layout_gravity="center"
                   android:textColor="#ffffff"
                   android:background="@drawable/blue_bg"
                   android:text="@string/next_tx"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="@dimen/qb_px_110"
                   android:layout_marginRight="@dimen/qb_px_30"/>


               <Button
                   android:visibility="gone"
                   android:id="@+id/bind_car_connection_search_agin_btn"
                   android:layout_marginLeft="@dimen/qb_px_30"
                   android:layout_gravity="center"
                   android:textColor="#ffffff"
                   android:background="@drawable/login_register_btn_bg"
                   android:text="@string/search_again_tx"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="@dimen/qb_px_108" />
           </LinearLayout>
   </LinearLayout>





    </LinearLayout>
</ScrollView>