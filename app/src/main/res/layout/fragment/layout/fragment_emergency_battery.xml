<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_500"
    android:orientation="vertical">

    <TextView
        android:layout_marginLeft="@dimen/qb_px_50"
        android:layout_marginTop="@dimen/qb_px_30"
        android:text="@string/emergency_time_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/qb_px_60"
        android:id="@+id/fragment_emergency_msg_tx"
        android:layout_marginLeft="@dimen/qb_px_150"
        android:layout_marginTop="@dimen/qb_px_40"
        android:text="@string/emergency_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_emergency_time_tx"
        android:layout_marginLeft="@dimen/qb_px_50"
        android:layout_marginTop="@dimen/qb_px_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>