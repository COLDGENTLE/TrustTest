<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhiteGay"
    android:orientation="vertical">


    <TextView
        android:id="@+id/battery_info_pos_tx"
        android:fontFamily="@font/hwht_subset"
        android:textColor="@color/colorBlack"
        android:text="电池仓：1"
        android:layout_marginTop="@dimen/qb_px_50"
        android:layout_marginLeft="@dimen/qb_px_60"
        android:textSize="@dimen/qb_px_51"
        android:layout_width="@dimen/qb_px_900"
        android:layout_height="wrap_content" />

    <TextView
        android:text="电池编号：无"
        android:id="@+id/battery_info_sn_tx"
        android:layout_marginTop="@dimen/qb_px_50"
        android:layout_marginLeft="@dimen/qb_px_60"
        android:textSize="@dimen/qb_px_51"
        android:layout_width="@dimen/qb_px_900"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/battery_info_mile_es_tx"
        android:layout_marginTop="@dimen/qb_px_10"
        android:layout_marginLeft="@dimen/qb_px_60"
        android:textSize="@dimen/qb_px_51"
        android:text="电池类型：无"
        android:layout_width="@dimen/qb_px_900"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/battery_info_rated_v_tx"
        android:layout_marginTop="@dimen/qb_px_10"
        android:layout_marginLeft="@dimen/qb_px_60"
        android:textSize="@dimen/qb_px_51"
        android:text="电池电压：无"
        android:layout_width="@dimen/qb_px_900"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/battery_info_capacity_tx"
        android:layout_marginTop="@dimen/qb_px_10"
        android:layout_marginLeft="@dimen/qb_px_60"
        android:textSize="@dimen/qb_px_51"
        android:text="电池容量：无"
        android:layout_width="@dimen/qb_px_900"
        android:layout_height="wrap_content" />












    <TextView
        android:id="@+id/battery_info_cycle_tx"
        android:layout_marginTop="@dimen/qb_px_10"
        android:layout_marginLeft="@dimen/qb_px_60"
        android:textSize="@dimen/qb_px_51"
        android:text="电池已使用：无"
        android:layout_width="@dimen/qb_px_900"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/battery_info_rated_c_tx"
        android:layout_marginTop="@dimen/qb_px_10"
        android:layout_marginLeft="@dimen/qb_px_60"
        android:textSize="@dimen/qb_px_51"
        android:text="电池容量：无"
        android:layout_width="@dimen/qb_px_900"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/battery_info_prod_date_tx"
        android:layout_marginTop="@dimen/qb_px_10"
        android:layout_marginLeft="@dimen/qb_px_60"
        android:textSize="@dimen/qb_px_51"
        android:text="生产日期：无"
        android:layout_width="@dimen/qb_px_900"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/battery_info_version_tx"
        android:layout_marginTop="@dimen/qb_px_10"
        android:layout_marginLeft="@dimen/qb_px_60"
        android:textSize="@dimen/qb_px_51"
        android:text="版本：无"
        android:layout_width="@dimen/qb_px_900"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/qb_px_50"/>
</LinearLayout>