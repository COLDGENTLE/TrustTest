<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sharkgulf.soloera.home.user.AboutBsActivity"

    >

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include
        layout="@layout/tite_layout"/>



    <ImageView
        android:id="@+id/about_bs_debug_expansion_btn"
        android:layout_marginTop="@dimen/qb_px_200"
        android:src="@mipmap/bs_ic_round"
        android:layout_width="@dimen/qb_px_350"
        android:layout_height="@dimen/qb_px_350" />


    <TextView
        android:textSize="@dimen/qb_px_58"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/qb_px_60"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/about_version_tx"
        android:layout_marginTop="@dimen/qb_px_30"
        android:text="version 1.0.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <View
        android:visibility="gone"
        android:layout_marginTop="@dimen/qb_px_200"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c4c4c4"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/about_version_btn"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_120">


        <TextView
            android:layout_marginLeft="@dimen/qb_px_50"
            android:text="版本更新"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c4c4c4"/>
    </LinearLayout>

    <TextView
        android:layout_above="@+id/about_bs_from_tv"
        android:id="@+id/about_bs_privacy_policy_tv"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:id="@+id/about_bs_from_tv"
        android:layout_centerHorizontal="true"
        android:text="@string/app_from"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
