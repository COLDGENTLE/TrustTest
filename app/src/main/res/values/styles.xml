<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>


    <style name="date_picker_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/date_picker_bg</item>
    </style>


    <style name="startTheme"   parent="Theme.AppCompat.Light">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowBackground">@color/blueF1</item>
    </style>


    <style name="startTranceTheme"   parent="Theme.AppCompat.Light">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>


    <style name="mainTheme"   parent="Theme.AppCompat.Light">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowBackground">@drawable/bs_my_car_no_login</item>
    </style>




    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorBlue</item>
        <item name="colorSwitchThumbNormal">@color/colorWhiteGay</item>
        <item name="android:colorForeground">#afafaf</item>
    </style>


    <style name="CircularProgressBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="stroke_width">5dp</item>
        <item name="progress" format="float">0.1</item>
        <item name="progress_color">#ffff4444</item>
        <item name="progress_background_color">#ffffffff</item>
        <item name="marker_visible">true</item>
        <item name="thumb_visible">true</item>
    </style>

    <style name="CircularProgressBarLight">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="stroke_width">5dp</item>
        <item name="progress" format="float">0.1</item>
        <item name="progress_color">#ffff4444</item>
        <item name="progress_background_color">#aaa</item>
        <item name="marker_visible">true</item>
        <item name="thumb_visible">true</item>
    </style>





</resources>
